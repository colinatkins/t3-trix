{
  "name": "atkins/t3-trix",
  "type": "typo3-cms-framework",
  "description": "A Trix Rich Text Editor Integration for TYPO3 CMS",
  "homepage": "https://github.com/colinatkins/t3-trix",
  "license": [
    "GPL-2.0-or-later"
  ],
  "authors": [
    {
      "name": "Colin Atkins",
      "email": "atkins@hey.com",
      "role": "Developer"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "require": {
    "php" : "~7.2 || ~7.4 || ~8.0 || ~8.1 || ~8.2",
    "typo3/cms-core" : "10.* || 11.* || 12.*"
  },
  "conflict": {
    "typo3/cms": "*",
    "typo3/cms-rte-ckeditor": "*"
  },
  "suggest": {
    "typo3/cms-setup": "*"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "trix"
    },
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Atkins\\Trix\\": "Classes/"
    }
  }
}
